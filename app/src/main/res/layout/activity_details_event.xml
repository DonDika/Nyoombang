<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.DetailsEventActivity"
    >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:cardCornerRadius="12dp"
                app:cardElevation="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_campaign"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/backgrounds/scenic" />
            </androidx.cardview.widget.CardView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                tools:src="@tools:sample/avatars"
                app:civ_border_color="@color/teal_200"
                app:civ_border_width="0.5dp"
                app:layout_constraintStart_toStartOf="@id/tv_campaign_name"
                app:layout_constraintTop_toBottomOf="@id/tv_campaign_name" />


            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Udin Petot"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/gray.primary"
                app:layout_constraintBottom_toBottomOf="@id/image_user"
                app:layout_constraintStart_toEndOf="@id/image_user"
                app:layout_constraintTop_toTopOf="@id/image_user" />

            <TextView
                android:id="@+id/tv_user_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04 Desember"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintBottom_toBottomOf="@id/image_user"
                app:layout_constraintEnd_toEndOf="@id/tv_campaign_name"
                app:layout_constraintTop_toTopOf="@id/image_user" />

            <TextView
                android:id="@+id/tv_campaign_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_container"
                tools:text="Bantu Donasi Buat Party aAa a A A AaAAAAAAAAaaAAA" />


            <TextView
                android:id="@+id/tv_amount_donation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Terkumpul"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/gray.primary_dark"
                app:layout_constraintStart_toStartOf="@id/image_user"
                app:layout_constraintBottom_toTopOf="@id/bayar_donasi"
                />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_700"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_amount_donation"
                app:layout_constraintEnd_toEndOf="@id/tv_user_date"
                app:layout_constraintTop_toTopOf="@id/tv_amount_donation"
                tools:text="Rp 2.000.000.000" />


            <TextView
                android:id="@+id/tv_description_donation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Deskripsi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/gray.primary_dark"
                app:layout_constraintStart_toStartOf="@id/image_user"
                app:layout_constraintTop_toBottomOf="@id/image_user" />

            <TextView
                android:id="@+id/tv_campaign_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:maxLines="10"
                android:text="Lorem ipsum dolor sit amet consectetur. Velit volutpat odio sed maecenas elementum et diam eleifend. Tempus mi duis purus risus mi et tincidunt. Quisque ut mi nisl non fermentum. Dignissim ornare amet tincidunt vitae nisi eu arcu semper.Lorem ipsum dolor sit amet consectetur. Velit volutpat odio sed maecenas elementum et diam eleifend. Lorem ipsum dolor sit amet consectetur. Velit volutpat odio sed maecenas elementum et diam eleifend. Lorem ipsum dolor sit amet consectetur. Velit volutpat odio sed maecenas elementum et diam eleifend. Lorem ipsum dolor sit amet consectetur. Velit volutpat odio sed maecenas elementum et diam eleifend. "
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="@id/tv_user_date"
                app:layout_constraintStart_toStartOf="@id/image_user"
                app:layout_constraintTop_toBottomOf="@id/tv_description_donation"
                />

            <Button
                android:id="@+id/bayar_donasi"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="donasi"
                style="@style/MaterialButtonStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
